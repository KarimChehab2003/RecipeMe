<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipeItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/recipeImage"
        android:layout_width="120dp"
        android:layout_height="150dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/recipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/recipeImage"
        android:text="TextView"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/recipeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipeDesc"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/recipeImage"
        android:text="TextView" />

    <TextView
        android:id="@+id/recipeReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipeDesc"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/recipeTime"
        android:text="TextView" />

    <TextView
        android:id="@+id/recipeDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipeName"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/recipeImage"
        android:text="TextView" />

    <Button
        android:id="@+id/addToFavorites"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_below="@id/recipeDesc"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/recipeReview"
        android:background="@color/orangePrimary"
        android:text="Add To Favorites"
        android:textColor="@color/black"
        android:textSize="8sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/recipeTime"
        android:layout_marginVertical="16dp"
        android:background="#A4A4A4" />


</RelativeLayout>